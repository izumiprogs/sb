<Page x:Class="ProjectMarathon.AcceptSponsorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectMarathon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AcceptSponsorPage" Background="White">

    <Grid>
        <StackPanel>
        <TextBlock TextAlignment="Center" Margin="0, 20" Text="Спасибо за вашу спонсорскую поддержку!" Style="{StaticResource MainText}"/>
            <TextBlock TextAlignment="Center" Margin="0, 20" Style="{StaticResource DlcText}">
            Спасибо за поддержку бегуна в Marathon Skills 2024!"<LineBreak/>
            Ваше пожертвование пойдет в его благотворительную организацию
        </TextBlock>
            <TextBlock TextAlignment="Center" Style="{StaticResource DlcText}" Text="Имя бегуна"/>
            <TextBlock TextAlignment="Center" Margin="0, 10" Style="{StaticResource MainText}" Text="Имя фонда"/>
            <TextBlock Name="MoneyTextBlock" TextAlignment="Center" Style="{StaticResource DlcText}"/>
            <Button Name="GoBack" Content="Назад" Style="{StaticResource SmallButton}" Click="GoBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
